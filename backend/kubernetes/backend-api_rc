apiVersion: v1
kind: ReplicationController
metadata:
  name: backend-api
spec:
  replicas: 2
  template:
    metadata:
      labels:
        app: backend-api
    spec:
      containers:
      - name: backend-api
        image: eu.gcr.io/kubernetesdemo/backend-api:latest
        ports:
        - containerPort: 4567
        env:
          - name: DB_USER_NAME
            value: testuser
          - name: DB_USER_PASSWORD
            value: "1234"

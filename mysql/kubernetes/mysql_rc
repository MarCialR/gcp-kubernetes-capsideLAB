apiVersion: v1
kind: ReplicationController
metadata:
  name: mysql
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: mysql
    spec:
      containers:
      - name: mysql
        image: eu.gcr.io/kubernetesdemo/mysql:latest
        ports:
          - containerPort: 3306
        env:
          - 
            name: MYSQL_RANDOM_ROOT_PASSWORD
            value: lol 
